{
  "name": "@lewkz/ts-backend",
  "version": "1.0.8",
  "description": "Typescript template for backend apps/packages.",
  "main": "build/src/index.js",
  "repository": "git@github.com:leandrowkz/ts-backend.git",
  "author": "Leandro Mangini Antunes <leandro.antunes@mollie.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "lint:check": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint ./src --ext .js,.jsx,.ts,.tsx --fix",
    "prepare": "husky install",
    "release": "semantic-release",
    "start:dev": "nodemon ./src/index.ts --config .nodemon.json",
    "start:prod": "npm run build && TS_NODE_BASEURL=build node -r tsconfig-paths/register build/src/index.js",
    "test": "jest --config .jest.config.ts"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^10.0.2",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "semantic-release": "^21.0.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.3"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=19.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
